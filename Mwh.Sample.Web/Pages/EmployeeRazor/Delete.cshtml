@page
@model Mwh.Sample.Web.Pages.EmployeeRazor.DeleteModel

@{
    ViewData["Title"] = $"Delete Employee - {Model.Employee.Name} | ASP.NET Core Razor Pages";
    ViewData["Description"] = $"Confirm deletion of employee {Model.Employee.Name} using Razor Pages in ASP.NET Core. Ensure you want to delete this employee record.";
    ViewData["Keywords"] = "ASP.NET Core, Razor Pages, Delete Employee, CRUD operations, Razor Pages tutorial, employee management, MVC vs Razor Pages";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center text-danger">Delete Employee - @Model.Employee.Name</h2>
            <h4 class="text-center text-muted">Are you sure you want to delete this employee?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Employee.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Name)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Employee.Gender)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Gender)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Employee.Age)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Age)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Employee.Country)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Country)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Employee.Department.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Department.Name)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Employee.State)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.State)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Employee.ManagerId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.ManagerId)</dd>
            </dl>
            <form method="post" class="text-center mt-4">
                <input type="hidden" asp-for="Employee.Id" />
                <input type="submit" value="Delete" class="btn btn-danger me-2" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title">About the Delete Employee Page</h3>
            <p class="card-text">
                The Delete Employee page allows you to confirm the deletion of an employee record using Razor Pages in ASP.NET Core. This page displays all relevant information about the employee
                to help you make an informed decision. Razor Pages simplify the process of handling CRUD operations by integrating both the UI and the backend logic in a single file.
            </p>
            <h4 class="card-title">Best Practices:</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Confirmation:</strong> Always confirm deletion actions with users to prevent accidental data loss.</li>
                <li class="list-group-item"><strong>Use Anti-Forgery Tokens:</strong> Protect against CSRF attacks by including anti-forgery tokens in your forms.</li>
                <li class="list-group-item"><strong>Display Important Details:</strong> Show all relevant information to help users make informed decisions.</li>
            </ul>
        </div>
    </div>
</div>
